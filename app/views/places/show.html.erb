<div class ="booyah-box col-10 offset-1">
  <h1><%= @place.name %></h1>
  <i><%= @place.address %></i>
  <br/><br/>
  <p><%= @place.description %></p>
  <br/>

  <% if @place.photos.length == 0 %>
    <br/>
  <% elsif @place.photos.length == 1 %>
    <%= image_tag(@place.photos[0].picture, :height=> "100%", :width=> "100%", class: 'd-block img-fluid') %>
  <% else %>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      </ol>

      <div class="carousel-inner" role="listbox">
        <% @place.photos.each_with_index do |photo, index| %>
          <% if index == 1 %>
            <div class="carousel-item active">
            <%= image_tag(photo.picture, :height=> "100%", :width=> "100%", class: 'd-block img-fluid') %>
            </div>
          <% else %>
            <div class="carousel-item">
              <%= image_tag(photo.picture, :height=> "100%", :width=> "100%", class: 'd-block img-fluid') %>
            </div>
          <% end %> 
        <% end %> 
      </div>    

      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  <% end %>

  <br />

  <% if @place.latitude.present? && @place.longitude.present? %>

    <script>

      function initMap() {
        var myLatLng = {lat: <%= @place.latitude %>, lng: <%= @place.longitude %>};

        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 12,
          center: myLatLng
        });

        var marker = new google.maps.Marker({
          position: myLatLng,
          map: map,
          title: 'Hello World!'
        });
      }
    </script>

    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCBJC2DIiip4iRwvTJoaKFDaFAt0ZYJ5Vk&callback=initMap">
    </script>

    <div id="map"></div>
  <% end %>
 
  <div class="clear"></div>

  <div class="float-right">
    <% if current_user && current_user == @place.user %>
       <button type="button" class="btn btn-priary" data-toggle="modal" data-target="#photoModal">Add a photo</button>
      
      <%= link_to 'Edit', edit_place_path(@place), class: 'btn btn-primary' %>     
      <%= link_to 'Destroy', place_path(@place), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'btn btn-danger' %>
    <% else %>
        <button type="button" class="btn btn-priary" data-toggle="modal" data-target="#photoModal">Add a photo</button>
    <% end %>
  </div>
</div>


<div class="clear"></div>

<br />

<!-- Photo Modal -->
<div class="modal fade" id="photoModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Add a photo</h4>
      </div>
      <%= simple_form_for @photo, url: place_photos_path(@place) do |f| %>
        <div class="modal-body">
          <%= f.input :picture %>
          <%= f.input :caption %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit "Upload", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Comment Modal -->
<div class="modal fade" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Add a comment</h4>
      </div>
      <%= simple_form_for @comment, url: place_comments_path(@place) do |f| %>
        <div class="modal-body">
          <%= f.input :message %>
          <%= f.input :rating, as: :select, collection: Comment::RATINGS %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit "Add a Comment", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>


<div class="col-10 offset-1">
  <h1 class="float-left">Comments</h1>
  
  <h2 class="float-right"></h2>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary btn-lg float-right" data-toggle="modal" data-target="#commentModal">
      Add a comment
    </button>
  </div>
</div>


<div class="clear"></div>


<div class="row">
  <% @place.comments.each do |comment| %>
    <div class="col-12 col-sm-6">
      <blockquote>
        <% if comment.humanized_rating.present? %>
          <b><%= comment.humanized_rating %></b> -
        <% end %>
        <%= comment.message %>
        <small><%= comment.user.username %></small>
      </blockquote>
    </div>
  <% end %>
</div>